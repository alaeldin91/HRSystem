<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_centerVertical="true"
    tools:context=".fragment.application_resignation"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    android:id="@+id/cardview"
    app:cardElevation="2dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_resignation"
        android:gravity="center"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:fontFamily="@font/semibold"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/buttonText"
        android:id="@+id/app_resignation"
    android:textAlignment="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_resignation_number"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/app_resignation">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" الرقم:"
            android:textSize="15dp"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/medium"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1"
            android:fontFamily="@font/light"
            android:id="@+id/resignation_number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/border_text"
            android:layout_marginRight="5dp"
            android:textColor="@color/primaryText"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_resignation_name_employee"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/linear_resignation_number"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم الموظف"
                android:textSize="15dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/medium"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/light"
                android:id="@+id/employee_name_txt"
                android:layout_marginLeft="5dp"
                android:background="@drawable/border_text"
                android:layout_marginRight="5dp"
                android:textColor="@color/primaryText"
                />
        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/linear_reasons"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="15dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_below="@+id/linear_resignation_name_employee"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="السبب:"
               android:textSize="15dp"
               android:textColor="@color/primaryText"
               android:fontFamily="@font/medium"
              />
           <EditText
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:id="@+id/edt_reasons"
               android:minLines="4"
               android:scrollbarAlwaysDrawVerticalTrack="true"
               android:scrollbars="vertical"
               android:background="@drawable/border_text"
               />

       </LinearLayout>
       <Button
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:text="ارسال"
           android:id="@+id/send_dataapp"
           android:background="#eee"
           android:fontFamily="@font/light"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/linear_reasons"
           android:layout_marginTop="3dp"
           android:layout_marginBottom="3dp"

           />


    </RelativeLayout>





</android.support.v7.widget.CardView>